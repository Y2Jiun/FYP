rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /static/{document=**} {
      allow read, write: if true;
    }
    match /users/{document=**} {
      allow read, write: if true;
    }
    match /notification/{document=**} {
      allow read, write: if true;
    }
    match /notificationCounter/{document=**} {
      allow read, write: if true;
    }
    // Property Verification Collections
    match /properties/{document=**} {
      allow read, write: if true;
    }
    match /propertyDocuments/{document=**} {
      allow read, write: if true;
    }
    match /propertyVerificationHistory/{document=**} {
      allow read, write: if true;
    }
    match /propertyImages/{document=**} {
      allow read, write: if true;
    }
    // Counter Collections for ID Generation
    match /propertiesCounter/{document=**} {
      allow read, write: if true;
    }
    match /propertyDocumentsCounter/{document=**} {
      allow read, write: if true;
    }
    match /propertyVerificationHistoryCounter/{document=**} {
      allow read, write: if true;
    }
    match /propertyImagesCounter/{document=**} {
      allow read, write: if true;
    }
    // Chat Collections (DEBUG - COMPLETELY OPEN)
    match /chats/{chatId} {
      allow read, write: if true;
      match /messages/{messageId} {
        allow read, write: if true;
      }
    }
    match /propertyReports/{document=**} { allow read, write: if true; }
    match /banAppeals/{document=**} { allow read, write: if request.auth != null; }
    match /faqs/{document=**} { allow read, write: if request.auth != null; }
    // Add more collections as needed
  }
} 