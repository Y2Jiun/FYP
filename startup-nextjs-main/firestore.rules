service cloud.firestore {
  match /databases/{database}/documents {
    match /static/{document=**} {
      allow read, write: if true;
    }
    match /users/{document=**} {
      allow read, write: if true;
    }
    match /notification/{document=**} {
      allow read, write: if true;
    }
    match /notificationCounter/{document=**} {
      allow read, write: if true;
    }
    
    // Property Verification Collections
    match /properties/{document=**} {
      allow read, write: if true;
    }
    match /propertyDocuments/{document=**} {
      allow read, write: if true;
    }
    match /propertyVerificationHistory/{document=**} {
      allow read, write: if true;
    }
    match /propertyImages/{document=**} {
      allow read, write: if true;
    }
    
    // Counter Collections for ID Generation
    match /counters/{document=**} {
      allow read, write: if true;
    }
    
    // Add more collections as needed
  }
} 